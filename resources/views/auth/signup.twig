{% extends 'template/app.twig' %}
{% block title %}sign-up{% endblock %}

{% block content %}
<div class="box">
	<h1>Sign-up</h1>
	<form method="POST" action="{{ path_for('signup.post') }}">
		<label for="user_name">Username</label><br>
				{% if errors.user_name %}
		    	    <span class="help-block" style="color:#f20000">{{ errors.user_name | first }}</span><br>
		    	{% endif %}
		<input type="text" id="user_name" name="user_name" value="{{ old.user_name }}" placeholder="choose a username"><br>

		<label for="user_email">Email</label><br>
				{% if errors.user_email %}
		    	    <span class="help-block" style="color:#f20000">{{ errors.user_email | first }}</span><br>
		    	{% endif %}
		<input type="email" id="user_email" name="user_email" value="{{ old.user_email }}" placeholder="you@domain.com"><br>

		<label for="user_password">Password</label><br>
				{% if errors.user_password %}
		    	    <span class="help-block" style="color:#f20000">{{ errors.user_password | first }}</span><br>
		    	{% endif %}
		<input type="password" id="user_password" name="user_password"><br>

		<label for="user_password_confirm">Password again</label><br>
				{% if errors.user_password %}
		    	    <span class="help-block" style="color:#f20000">{{ errors.user_password | first }}</span><br>
		    	{% endif %}
		<input type="password" id="user_password_confirm" name="user_password"><br>

		<input type="hidden" name="op" value="reg">
		
		{{ csrf.field | raw }}

		<input type="submit" value="submit">
	</form>
	
	Forgot your password?<br>
	<a href="#">Recover your password here.</a>

</div>

{% endblock %}