{% extends 'template/app.twig' %}
{% block title %}sign-up{% endblock %}

{% block content %}
<div class="box">
	<h1>Sign-up</h1>
	<form method="POST" action="{{ path_for('signup.post') }}" class="form">
		<label for="user_name">Username</label>
				{% if errors.user_name %}
		    	    <span class="help-block" style="color:#f20000">{{ errors.user_name | first }}</span>
		    	{% endif %}<br>
		<input type="text" id="user_name" name="user_name" value="{{ old.user_name }}" placeholder="choose a username" autocomplete="off"><br>

		<label for="user_email">Email</label>
				{% if errors.user_email %}
		    	    <span class="help-block" style="color:#f20000">{{ errors.user_email | first }}</span>
		    	{% endif %}<br>
		<input type="email" id="user_email" name="user_email" value="{{ old.user_email }}" placeholder="you@domain.com" autocomplete="off"><br>

		<label for="user_password">Password</label>
				{% if errors.user_password %}
		    	    <span class="help-block" style="color:#f20000">{{ errors.user_password | first }}</span>
		    	{% endif %}<br>
		<input type="password" id="user_password" name="user_password" autocomplete="off"><br>

		<input type="hidden" name="op" value="reg">
		
		{{ csrf.field | raw }}

		<input type="submit" value="submit">
	</form>
	
	Forgot your password?<br>
	<a href="#">Recover your password here!</a>

</div>

{% endblock %}