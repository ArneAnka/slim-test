{% extends 'template/app.twig' %}
{% block title %}sign-up{% endblock %}

{% block content %}
  
	<form method="POST" action="{{ path_for('signup.post') }}">
		<label>Username</label><br>
				{% if errors.user_name %}
		    	    <span class="help-block" style="color:#f20000">{{ errors.user_name | first }}</span><br>
		    	{% endif %}
		<input type="text" name="user_name" value="{{ old.user_name }}" placeholder="choose a username"><br>

		<label>Password</label><br>
				{% if errors.user_password %}
		    	    <span class="help-block" style="color:#f20000">{{ errors.user_password | first }}</span><br>
		    	{% endif %}
		<input type="password" name="user_password"><br>

		<label>Password again</label><br>
				{% if errors.user_password %}
		    	    <span class="help-block" style="color:#f20000">{{ errors.user_password | first }}</span><br>
		    	{% endif %}
		<input type="password" name="user_password"><br>

		<label>Email</label><br>
				{% if errors.user_email %}
		    	    <span class="help-block" style="color:#f20000">{{ errors.user_email | first }}</span><br>
		    	{% endif %}
		<input type="email" name="user_email" value="{{ old.user_email }}" placeholder="you@domain.com"><br>

		<input type="hidden" name="op" value="reg">
		
		{{ csrf.field | raw }}

		<input type="submit" value="submit">
	</form>

{% endblock %}